<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <TextView
        android:id="@+id/statement_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:maxWidth="275dp"
        android:adjustViewBounds="true"
        android:textColor="#0e0e0e"/>

    <TextView
        android:id="@+id/statement_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:adjustViewBounds="true"
        android:textColor="#0e0e0e"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/upvote_button"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/statement_written_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/line_separator_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/upvote_button"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/increases_score_of_statement"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/line_separator_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/statement_score"
        android:layout_marginBottom="66dp"
        android:visibility="invisible" />

</RelativeLayout>